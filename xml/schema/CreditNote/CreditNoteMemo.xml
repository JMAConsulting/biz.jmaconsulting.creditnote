<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/CreditNote</base>
  <class>CreditNoteMemo</class>
  <name>civicrm_creditnote_memo</name>
  <comment></comment>
  <log>true</log>
  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment></comment>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
    <name>contribution_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>FK to Contribution ID</comment>
  </field>
  <foreignKey>
    <name>contribution_id</name>
    <table>civicrm_contribution</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>
  <field>
    <name>description</name>
    <type>VARCHAR</type>
    <size>255</size>
    <comment>credit note description</comment>
  </field>
  <field>
    <name>amount</name>
    <type>decimal</type>
    <required>true</required>
    <import>true</import>
    <comment>Total amount of this contribution. Use market value for non-monetary gifts.</comment>
    <html>
     <type>Text</type>
   </html>
  </field>
  <field>
    <name>created_date</name>
    <title>Created Date</title>
    <type>datetime</type>
    <comment>Credit Note created date</comment>
    <html>
      <type>Select Date</type>
    </html>
  </field>
</table>
